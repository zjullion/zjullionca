{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noEmit": false,
    "outDir": "dist",
    "target": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
